@model PDL.Viewmodels.MeasurementSourceViewModel
@{
    List<PDL.Viewmodels.MeasurementTypeViewModel> coll = (List<PDL.Viewmodels.MeasurementTypeViewModel>)ViewData["Types"];
    int id = 0;
}
<div class="container">
    <div class="col">
        <form asp-action="MeasurementsAdd">
            <div class="form-group col-1">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" />
            </div>

            <div class="form-group col-1">
                <label asp-for="@Model.SourceType"></label>
                <select asp-for="@Model.Id">
                    @foreach (var item in coll)
                    {
                        <option value="@item.Id">@item.Name, @item.Unit</option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group col-1">
                <input type="submit" value="MeasurementsAdd" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>